# focus or send to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# move/resize
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Terminal
super + apostrophe
  $TERMINAL

# Editor
super + e
  $EDITOR

# Make the current window floating
super + s
    bspc node -t floating

# Make the current window tiled
super + t
    bspc node -t tiled

# Toggle fullscreen
super +f
	  bspc node -t "~fullscreen"

# Set the window state
super + {t,shift + t,s}
	  bspc node -t {tiled,pseudo_tiled,floating}

# Restart bspwm
super + Escape
    bspc wm -r

# Launch rofi
super + d
     rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/polybar/shapes/scripts/rofi/launcher.rasi

# Restart XOrg
super + alt + BackSpace
    pkill Xorg

# Reload sxhkd
alt + shift + r
	pkill -USR1 -x sxhkd

# Quit/Restart BSPWM
control + alt + {q,r}
	bspc {quit 1, wm -r}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

super + m
      $TERMINAL --class TermApp,TermApp --title ncmcpp --command ncmpcpp

super + n
      $TERMINAL --class TermApp,TermApp --title nmtui --command nmtui

super + r 
      $TERMINAL --class TermApp,TermApp --title lf --command lf

super + w
      $TERMINAL --class TermApp,TermApp --title taskwarrior-tui --command taskwarrior-tui

# Multimedia keys
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
  # pactl -- set-sink-volume 0 +5%

# Still mu√∏ltimedia
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
  # pactl -- set-sink-volume 0 -5%

# still
XF86AudioMute
  amixer -D pulse sset Master toggle-mute

# Brightness up
XF86MonBrightnessUp
  light -A 10

# And brightness down
XF86MonBrightnessDown
  light -U 10

super + a
	alacritty --class TermApp,TermApp --title pulsemixer --command pulsemixer

# Screenshot
Print
    ~/.local/bin/screenshot.sh

# Define the available layouts
set $layouts us es no
set $layoutIndex 0

# Rotate between layouts with Super + Space
super + space
      kb-layout-next.sh
